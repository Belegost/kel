{{ form_start(form) }}
{% if form.vars.errors|length > 0 %}
    <div style="color: #AA3333; padding: 20px; margin: 10px 0; background-color: lightpink; border-radius: 3px;">
        {{ form_errors(form) }}
    </div>
{% endif %}

<fieldset class="usersettings-firstname has_error">
    {{ form_label(form.first_name) }}
    {{ form_widget(form.first_name) }}
    <div class="field-border"></div>
    <div class="field-error">{{ form_errors(form.first_name) }}</div>
    <!--Please type your first name-->
</fieldset>
